<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" type="text/css" href="/assets/css/bootstrap.min1.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <script src="/assets/js/bootstrap.min1.js" type="text/javascript"></script>
  <link href="/assets/css/css.css" rel="stylesheets">
  <title>Document</title>
  <style>
    body,
    html {
      height: 100%;
      margin: 0;
    }

    .container-fluid {
      height: 100%;
    }

    .row {
      height: 100%;
    }

    .position-fixed {
      height: 100vh;
    }

    .main-content {
      margin-left: 250px;
      /* Điều chỉnh theo chiều rộng của sidebar */
      padding: 20px;
    }
  </style>
</head>

<body>
  <%- include('../common/siderbar.ejs') %>

    <!--main-content-->
    </div>
    <div class="main-content ml-2 col-10">
      <div class="row text-center">
        <h1>EDIT POST </h1>
      </div>
      <form action="/admin/edit-post/<%= data.id %>" method="post" enctype="multipart/form-data">
        <div class="row justify-content-center">
          <div class="col-10 border border-dark rounded p-3 ">
            <div class="row mb-5 overflow-hidden ">
              <div class="form-group">
                <label for="email">Author</label>
                <select class="form-select" aria-label="Default select example" value="<%=data.user.id %>"
                  name="author">
                  <% for (var i=0 ; i < dataauthor.length; i++) {%>
                    <% if(data.user.name==dataauthor[i].name){%>
                      <option selected value="<%=dataauthor[i].id %>">
                        <%= dataauthor[i].name %>
                      </option>
                      <% } else{ %>
                        <option value="<%=dataauthor[i].id %>">
                          <%= dataauthor[i].name%>
                        </option>
                        <% }%>
                          <% }%>
                </select>
              </div>
              <div class="form-group">
                <label>Post name</label>
                <input type="text" class="form-control" id="email" value="<%= data.name %>" name="name">
              </div>
              <div class="form-group">
                <lable>Img</lable>
                <div class="col-sm-offset-1 col-sm-5">
                  <div class="single-about-img">
                    <img src="<%= data.img %>" class="card-img-top img-fluid" alt="profile_image">
                  </div>
                </div>
                <input type="file" name="img">
              </div>
              <div class="form-group">
                <label>Time</label>
                <input type="text" class="form-control" id="email" value="<%= data.time %>" name="time">
              </div>
              <div class="form-group">
                <label for="email">
                  <h6>Content </h6>
                </label>
                <textarea type="text" class="form-control" id="email" name="content"><%= data.content %></textarea>
              </div>
              <div class="form-group">
                <label for="email">
                  <h6>Describe </h6>
                </label>
                <textarea type="text" class="form-control" id="email" name="describe"><%= data.describe %></textarea>
              </div>
              <div class="form-group">
                <label for="email">
                  <h6>Categoris</h6>
                </label>
                <div class="row row-cols-6 row-cols-lg-9 g-2 g-lg-3  ">
                  <% for(var i=0; i < datacategori.length ;i ++){%>
                    <div class="col-2">
                      <% var check=0; %>
                        <% for(var j=0; j < categori.categoriss.length ;j ++){%>
                          <% if(categori.categoriss[j].categori.name==datacategori[i].name){%>
                            <% check=1; %>
                              <%}%>
                                <%}%>
                                  <% if(check==1){%>
                                    <input type="checkbox" checked id="hobbies" name="categori"
                                      value="<%= datacategori[i].id %>">
                                    <label for="hobbies">
                                      <%= datacategori[i].name %>
                                    </label>
                                    <%}else{%>
                                      <input type="checkbox" id="hobbies" name="categori"
                                        value="<%=datacategori[i].id %>">
                                      <label for="hobbies">
                                        <%= datacategori[i].name %>
                                      </label>
                                      <%}%>
                    </div>
                    <%}%>
                </div>
              </div>
              <button type="submit" class="btn btn-default btn-dark mt-2 mb-2 ">UPDATE</button>
              <button type="button" class="btn btn-dark btn-default "><a href="/admin/POST"
                  class="nav-link text-white">RETURN</a></button>
            </div>
          </div>
        </div>
      </form>
    </div>
</body>

</html>